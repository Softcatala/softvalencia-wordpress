{% for post in posts %}
    <div class="post">
        <h2><a href="{{post.permalink}}">{{post.title}}</a></h2>
        {{function('botons_socials')}}
        	<div class="post-entry">
                <ul class='post-meta'> 
                    {% if attribute(post,'mf-imatge') %}
                        <div class="programa">
                            <img style="vertical-align:middle" src="{{ attribute(post,'mf-imatge') }}" />
                        </div>
                    {% endif %}
                    {% if post.descripcio_curta %}
                        <div class="programa_desc">
                            <br />{{ post.descripcio_curta }}
                        </div>
                    {% endif %}
                </ul>
			</div>
    </div>
{% else %}
    <div class="post">
    	<div class="post-entry">
			<h2>No s'ha trobat</h2>
			<p class="center">Sembla que el que el que esteu cercant no es troba ac√≠.</p>
		</div>
	</div>
{% endfor %}
